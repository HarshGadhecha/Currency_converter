// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model CurrencySettings {
  id                  String   @id @default(uuid())
  shop                String   @unique
  enabled             Boolean  @default(true)
  baseCurrency        String   @default("USD")
  supportedCurrencies String   @default("USD,EUR,GBP,CAD,AUD,JPY,INR")
  autoDetect          Boolean  @default(true)
  showCurrencyPicker  Boolean  @default(true)
  roundPrices         Boolean  @default(false)

  // Shape and Border Customization
  borderRadius        String   @default("8px")
  borderWidth         String   @default("1px")
  borderColor         String   @default("#dddddd")

  // Shadow Customization
  shadowEnabled       Boolean  @default(true)
  shadowDepth         String   @default("medium") // light, medium, strong

  // Background Customization
  backgroundType      String   @default("solid") // solid, gradient, theme
  backgroundColor     String   @default("#ffffff")
  backgroundGradient  String   @default("linear-gradient(135deg, #667eea 0%, #764ba2 100%)")
  themePreset         String   @default("light") // light, dark, custom

  // Currency Display Options
  displayMode         String   @default("symbol") // symbol, flag, flag-symbol

  // Theme Support
  themeMode           String   @default("auto") // auto, light, dark, custom
  customLightBg       String   @default("#ffffff")
  customLightText     String   @default("#333333")
  customDarkBg        String   @default("#1a1a1a")
  customDarkText      String   @default("#ffffff")

  // Desktop Positioning
  desktopPosition     String   @default("top-right") // top-right, top-left, bottom-right, bottom-left, custom
  desktopCustomX      String   @default("20px")
  desktopCustomY      String   @default("20px")

  // Mobile Positioning
  mobilePosition      String   @default("bottom-fixed") // bottom-fixed, top-fixed, floating, custom
  mobileCustomX       String   @default("50%")
  mobileCustomY       String   @default("auto")
  mobileCompact       Boolean  @default(true)

  // Advanced Styling
  fontSize            String   @default("14px")
  padding             String   @default("12px")
  zIndex              Int      @default(9999)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
